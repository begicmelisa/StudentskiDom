@using StudentskiDom.Web.Areas.ManagerModul.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutManagerModul.cshtml";

}
@model ZaposleniciEditVM
@if (!ViewData.ModelState.IsValid)
{
    <span class="alert-danger">
        @Html.ValidationSummary()
    </span>
}
<ol class="breadcrumb">
    <li>
        <a href="/ManagerModul" class="breadcrumb-item" style="color:cadetblue;font-size:x-large;text-decoration:none">Modul manager</a>
    </li>
</ol>
<hr />
<div>
    <h2 style="display:inline-block">Ažuriranje informacija</h2> <a href="/ManagerModul/Zaposlenici" class="btn btn-primary" style="float:right;margin-right:10px">Poništi</a>
</div>
<hr />

<form asp-area="ManagerModul" asp-controller="Zaposlenici" asp-action="SnimiPromjene">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="@Model.Ime"  class="control-label"></label>
                <input asp-for="@Model.Ime" value="@Model.Ime" class="form-control" />
                <span asp-validation-for="@Model.Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Prezime" class="control-label"></label>
                <input asp-for="@Model.Prezime" value="@Model.Prezime" class="form-control" />
                <span asp-validation-for="@Model.Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Jmbg" class="control-label"></label>
                <input asp-for="@Model.Jmbg" value="@Model.Jmbg" class="form-control" />
                <span asp-validation-for="@Model.Jmbg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" value="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Telefon" class="control-label"></label>
                <input asp-for="@Model.Telefon" value="@Model.Telefon" class="form-control" />
                <span asp-validation-for="@Model.Telefon" class="text-danger"></span>
            </div>
           
        </div>
        <div class="col-md-4">       
            
            <div class="form-group">
                <label asp-for="@Model.VrsteZaposlenikaId" class="control-label"></label>
                <select asp-for="@Model.VrsteZaposlenikaId" value="@Model.VrsteZaposlenika" class="form-control" asp-items="@Model.VrsteZaposlenika"></select>
                <span asp-validation-for="@Model.VrsteZaposlenikaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.GradId" class="control-label"></label>
                <select asp-for="@Model.GradId"  class="form-control" asp-items="@Model.Gradovi"></select>
                <span asp-validation-for="@Model.GradId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Username" class="control-label"></label>
                <input type="text" asp-for="@Model.Username" value="@Model.Username" class="form-control" asp-items="ViewBag._GradId">
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label"></label>
                <input type="password" asp-for="@Model.Password" value="@Model.Password" class="form-control" asp-items="ViewBag.KorisnickiNalogId">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-outline-secondary" />
            </div>
        </div>
    </div>
</form>


