@using StudentskiDom.Web.Areas.ManagerModul.ViewModels
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutManagerModul.cshtml";

}
@model StudentiIndexVM
<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
<link href="~/css/sb-admin.css" rel="stylesheet">
<ol class="breadcrumb">
    <li>
        <a href="/ManagerModul" class="breadcrumb-item" style="color:cadetblue;font-size:x-large;text-decoration:none">Modul manager</a>
    </li>
</ol>
<hr />


<form asp-route="/ManagerModul/Studenti/Index" method="get" class="form-inline my-2 my-lg-0 mr-lg-2">
    <div class="input-group">
        <input class="form-control" type="text" placeholder="Pretraga studenata..." name="searchString">
        <span class="input-group-append">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
</form>
<hr />
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Tabela studenata
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ime</th>
                        <th>Prezime</th>
                        <th>Spol</th>
                        <th>Jmbg</th>
                        <th>Email</th>
                        <th>Grad</th>
                    </tr>
                </thead>
              
                <tbody>
                    @foreach (var x in Model.Rows)
                    {
                        <tr>
                            <td>@x.Ime</td>
                            <td>@x.Prezime</td>
                            <td>@x.Spol</td>
                            <td>@x.Jmbg</td>
                            <td>@x.Email</td>
                            <td>@x.Grad</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
