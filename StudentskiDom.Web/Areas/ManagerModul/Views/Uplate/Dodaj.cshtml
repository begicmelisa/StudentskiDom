@using StudentskiDom.Web.Areas.ManagerModul.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Views/Shared/_LayoutManagerModul.cshtml";

}
@model UplateDodajVM
@if (!ViewData.ModelState.IsValid)
{
    <span class="alert-danger">
        @Html.ValidationSummary()
    </span>
}
<ol class="breadcrumb">
    <li>
        <a href="/ManagerModul" class="breadcrumb-item" style="color:cadetblue;font-size:x-large;text-decoration:none">Modul manager</a>
    </li>
</ol>
<hr />
<div>
    <h2 style="display:inline-block">Dodavanje nove uplate</h2><a href="/ManagerModul/Zaposlenici" class="btn btn-primary" style="float:right;margin-right:10px">Ponisti</a>
</div>
<hr />




<div class="container">
    <div class="card-body">

        <form asp-action="Snimi" asp-controller="Uplate" asp-area="ManagerModul" method="post">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label>Datum:</label>
                        <input type="date" asp-for="@Model.Datum" required class="form-control" aria-describedby="nameHelp" placeholder="Enter first name" />
                    </div>
                    <div class="col-md-6">
                        <label>Iznos:</label>
                        <input type="text" asp-for="@Model.Iznos" required class="form-control" aria-describedby="nameHelp" placeholder="Enter last name" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>
                    Studenti:
                </label>
                <select asp-for="@Model.StudentId" asp-items="@Model.Studenti" class="form-control"></select>
            </div>
            <div class="form-group">
                <label>
                    Zaposlenici:
                </label>
                <select asp-for="@Model.ZaposleniciId" asp-items="@Model.Zaposlenici" class="form-control"></select>
            </div>
            <div class="form-group">
                <label>
                    Tip uplata:
                </label>
                <select asp-for="@Model.TipoviUplataId" asp-items="@Model.TipoviUplata" class="form-control"></select>
            </div>
            <div>
                <input type="submit" value="Snimi" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>
